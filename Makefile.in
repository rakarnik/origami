BAMLIBS = -lbamtools
BAMINC = -I/usr/local/include/bamtools

all: bamexes

bamexes:
	cd src && g++ $(BAMINC) -c mapped-reads-merge.cpp
	cd src && g++ -o mapped-reads-merge mapped-reads-merge.o $(BAMLIBS)

clean:
	cd src && rm *.o mapped-reads-merge

dist:
	tar -cvf origami.tar configure.ac configure Makefile.in README.md INSTALL bin/origami-conversion bin/origami-analysis bin/origami-alignment scripts/* src/mapped-reads-merge.cpp
	gzip origami.tar
